generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String
  phone    Int
}

model Promoter {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String
  phone    Int

  enclosures Enclosure[]
  events Event[]
}

model Event {
  id       String   @id @default(cuid())
  title    String
  location String
  date     DateTime

  promoter   Promoter @relation(fields: [promoterId], references: [id])
  promoterId String

  sessions Session[]
}

model Session {
  id   String @id @default(cuid())
  name String

  eventId String
  event   Event  @relation(fields: [eventId], references: [id])

  tickets Ticket[]
}

model Ticket {
  id          String @id @default(cuid())
  name        String
  conditions  String
  description String
  price       Int

  sessionId String
  session   Session @relation(fields: [sessionId], references: [id])

  zoneId String?
  zone   Zone?   @relation(fields: [zoneId], references: [id])
  Seat   Seat[]
}

model Enclosure {
  id            String @id @default(cuid())
  name          String
  totalCapacity Int

  promoter Promoter @relation(fields: [promoterId], references: [id])
  promoterId String

  zones Zone[]
}

model Zone {
  id       String @id @default(cuid())
  name     String  
  capacity Int

  enclosureId String
  enclosure   Enclosure    @relation(fields: [enclosureId], references: [id])

  tickets Ticket[]
  seats   Seat[]
}

model Seat {
  id    String @id @default(cuid())
  label String 

  zoneId String
  zone   Zone   @relation(fields: [zoneId], references: [id])

  ticket   Ticket? @relation(fields: [ticketId], references: [id])
  ticketId String?
}
