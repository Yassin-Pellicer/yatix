generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     Int
}

model Promoter {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     Int

  created_events Event[] @relation("MANAGES")
}

model Event {
  id         String   @id @default(cuid())
  title      String
  location   String
  date       DateTime
  capacity   Int

  promoter Promoter @relation("MANAGES", fields: [promoter_id], references: [id])
  promoter_id String
}

